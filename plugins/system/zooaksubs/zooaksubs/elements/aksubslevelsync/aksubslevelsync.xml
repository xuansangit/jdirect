<?xml version="1.0" encoding="utf-8"?>
<element type="aksubslevelsync" group="ZOOlanders Extensions">
	<name>Aksubs Level Sync</name>
	<author>ZOOlanders</author>
	<creationDate>August 2011</creationDate>
	<copyright>Copyright (C) 2011 JOOlanders, SL</copyright>
	<authorEmail>info@zoolanders.com</authorEmail>
	<authorUrl>http://www.zoolanders.com</authorUrl>
	<version>3.0</version>
	<description>Aksubs Level Sync Element - Allow to use your Items as Levels</description>
	<params>
		<param name="default" type="zlfield" label="Specific">
			<setfield id="default" type="select" default="0" label="Default" help="Choose the default option.">
				<specific>
					<options>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</options>
				</specific>
			</setfield>
		</param>
	</params>
	<params group="render">
		<param name="layout" type="zlfield" label="Layout" addctrl="layout" toggle="true">
			<loadfield type="layout" >
				<layout label="PLG_ZLFRAMEWORK_MAIN_LAYOUT" help="PLG_ZLFRAMEWORK_MAIN_LAYOUT_DESC" path="elements:aksubslevelsync/tmpl/render" />
			</loadfield>
		</param>
	</params>
</element>