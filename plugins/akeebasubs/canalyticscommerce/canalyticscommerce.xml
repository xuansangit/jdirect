	<version>1.0</version>
	<description>PLG_AKEEBASUBS_CANALYTICSCOMMERCE_DESCRIPTION</description>
	<files>
		<filename plugin="canalyticscommerce">canalyticscommerce.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akeebasubs_canalyticscommerce.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="tracking_id" type="text" size="15" default="" label="PLG_AKEEBASUBS_CANALYTICSECOMMERCE_TRACKING_ID_TITLE" description="PLG_AKEEBASUBS_CANALYTICS_TRACKING_ID_DESC" required="true" />
				<field name="store_name" type="text" size="15" default="akeeba" label="PLG_AKEEBASUBS_CANALYTICSECOMMERCE_STORE_NAME_TITLE" description="PLG_AKEEBASUBS_CANALYTICS_STORE_NAME_DESC" required="true" />
			</fieldset>
		</fields>
	</config>
</extension>