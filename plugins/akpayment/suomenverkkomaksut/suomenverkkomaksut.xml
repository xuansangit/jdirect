	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-03-23</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_DESCRIPTION</description>
	<files>
		<filename plugin="suomenverkkomaksut">suomenverkkomaksut.php</filename>
		<folder>suomenverkkomaksut</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_suomenverkkomaksut.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_suomenverkkomaksut.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_TITLE_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_PPIMAGE_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_MERCHANTID_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_MERCHANTID_DESC"/>
				<field name="merchant_hash" type="text" size="50" default="" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_MERCHANTHASH_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_MERCHANTHASH_DESC"/>
				<field type="spacer" />
				<field name="culture" type="radio" default="fi_FI" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_CULTURE_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_CULTURE_DESC">
					<option value="fi_FI">PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_CULTURE_FI</option>
					<option value="sv_SE">PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_CULTURE_SV</option>
					<option value="en_US">PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_CULTURE_EN</option>
				</field>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_SANDBOX_LABEL" description="PLG_AKPAYMENT_SUOMENVERKKOMAKSUT_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>