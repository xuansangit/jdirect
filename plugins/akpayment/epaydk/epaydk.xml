<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Epay.dk</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-03-04</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_EPAYDK_DESCRIPTION</description>
	<files>
		<filename plugin="epaydk">epaydk.php</filename>
		<folder>epaydk</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_epaydk.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_epaydk.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_TITLE_LABEL" description="PLG_AKPAYMENT_EPAYDK_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_PPIMAGE_LABEL" description="PLG_AKPAYMENT_EPAYDK_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_MERCHANT_LABEL" description="PLG_AKPAYMENT_EPAYDK_MERCHANT_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_EPAYDK_SANDBOX_LABEL" description="PLG_AKPAYMENT_EPAYDK_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
				<field name="sandbox_merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_SANDBOX_MERCHANT_LABEL" description="PLG_AKPAYMENT_EPAYDK_SANDBOX_MERCHANT_LABEL"/>
				
				<field type="spacer" />
				<field name="md5" type="radio" default="1" label="PLG_AKPAYMENT_EPAYDK_MD5_LABEL" description="PLG_AKPAYMENT_EPAYDK_MD5_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
				<field name="secret" type="text" size="100" default="" label="PLG_AKPAYMENT_EPAYDK_SECRET_LABEL" description="PLG_AKPAYMENT_EPAYDK_SECRET_DESC"/>
				<field type="spacer" />
				<field name="cardtypes" multiple="multiple" type="list" size="14" default="1" label="PLG_AKPAYMENT_EPAYDK_CARDTYPES_LABEL" description="PLG_AKPAYMENT_EPAYDK_CARDTYPES_DESC">
				  <option value="1">PLG_AKPAYMENT_EPAYDK_CARD_DANKORT</option>
				  <option value="2">PLG_AKPAYMENT_EPAYDK_CARD_EDANKORT</option>
				  <option value="3">PLG_AKPAYMENT_EPAYDK_CARD_VISA</option>
				  <option value="4">PLG_AKPAYMENT_EPAYDK_CARD_MASTERCARD</option>
				  <option value="6">PLG_AKPAYMENT_EPAYDK_CARD_JCB</option>
				  <option value="7">PLG_AKPAYMENT_EPAYDK_CARD_MAESTRO</option>
				  <option value="8">PLG_AKPAYMENT_EPAYDK_CARD_DINERS</option>
				  <option value="9">PLG_AKPAYMENT_EPAYDK_CARD_AMEX</option>
				  <option value="11">PLG_AKPAYMENT_EPAYDK_CARD_FORBRUNGSFORENINGEN</option>
				  <option value="12">PLG_AKPAYMENT_EPAYDK_CARD_NORDEA</option>
				  <option value="13">PLG_AKPAYMENT_EPAYDK_CARD_DANSKENETBETALINGER</option>
				  <option value="14">PLG_AKPAYMENT_EPAYDK_CARD_PAYPAL</option>
				  <option value="15">PLG_AKPAYMENT_EPAYDK_CARD_MOBILPENGE</option>
				</field>
				<field name="language" type="list" default="0" label="PLG_AKPAYMENT_EPAYDK_LANGUAGE_LABEL" description="PLG_AKPAYMENT_EPAYDK_LANGUAGE_DESC">
				  <option value="0">PLG_AKPAYMENT_EPAYDK_LANGUAGE_AUTO</option>
				  <option value="1">PLG_AKPAYMENT_EPAYDK_LANGUAGE_DK</option>
				  <option value="2">PLG_AKPAYMENT_EPAYDK_LANGUAGE_EN</option>
				  <option value="3">PLG_AKPAYMENT_EPAYDK_LANGUAGE_SE</option>
				  <option value="4">PLG_AKPAYMENT_EPAYDK_LANGUAGE_NO</option>
				  <option value="5">PLG_AKPAYMENT_EPAYDK_LANGUAGE_GL</option>
				  <option value="6">PLG_AKPAYMENT_EPAYDK_LANGUAGE_IS</option>
				  <option value="7">PLG_AKPAYMENT_EPAYDK_LANGUAGE_DE</option>
				  <option value="8">PLG_AKPAYMENT_EPAYDK_LANGUAGE_FI</option>
				  <option value="9">PLG_AKPAYMENT_EPAYDK_LANGUAGE_ES</option>
				  <option value="10">PLG_AKPAYMENT_EPAYDK_LANGUAGE_FR</option>
				  <option value="11">PLG_AKPAYMENT_EPAYDK_LANGUAGE_PO</option>
				</field>
				<field type="spacer" />
				<field name="cbt" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_CBT_LABEL" description="PLG_AKPAYMENT_EPAYDK_CBT_DESC" />
				<field name="cpp_header_image" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_HEADER_LABEL" description="PLG_AKPAYMENT_EPAYDK_HEADER_DESC" />
				<field name="cpp_headerback_color" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_HEADERBACK_LABEL" description="PLG_AKPAYMENT_EPAYDK_HEADERBACK_DESC" />
				<field name="cpp_headerborder_color" type="text" size="50" default="" label="PLG_AKPAYMENT_EPAYDK_HEADERBORDER_LABEL" description="PLG_AKPAYMENT_EPAYDK_HEADERBORDER_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>