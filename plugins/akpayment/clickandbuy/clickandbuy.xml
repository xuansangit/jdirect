<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - ClickandBuy</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-07-20</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_CLICKANDBUY_DESCRIPTION</description>
	<files>
		<filename plugin="clickandbuy">clickandbuy.php</filename>
		<folder>clickandbuy</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_clickandbuy.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_clickandbuy.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_TITLE_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_PPIMAGE_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_MERCHANTID_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_MERCHANTID_DESC"/>
				<field name="project_id" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_PROJECTID_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_PROJECTID_DESC"/>
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_KEY_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_KEY_DESC"/>
				<field type="spacer" />
				<field name="sb_merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_SB_MERCHANTID_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_SB_MERCHANTID_DESC"/>
				<field name="sb_project_id" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_SB_PROJECTID_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_SB_PROJECTID_DESC"/>
				<field name="sb_key" type="text" size="50" default="" label="PLG_AKPAYMENT_CLICKANDBUY_SB_KEY_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_SB_KEY_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_CLICKANDBUY_SANDBOX_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_SANDBOX_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>