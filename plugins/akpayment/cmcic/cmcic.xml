<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - CM-CIC p@iement</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-10-27</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_CMCIC_DESCRIPTION</description>
	<files>
		<filename plugin="cmcic">cmcic.php</filename>
		<folder>cmcic</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_cmcic.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_cmcic.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_CMCIC_TITLE_LABEL" description="PLG_AKPAYMENT_CMCIC_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_CMCIC_PPIMAGE_LABEL" description="PLG_AKPAYMENT_CMCIC_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="tpe" type="text" size="50" default="" label="PLG_AKPAYMENT_CMCIC_TPE_LABEL" description="PLG_AKPAYMENT_CMCIC_TPE_DESC"/>
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_CMCIC_KEY_LABEL" description="PLG_AKPAYMENT_CMCIC_KEY_DESC"/>
				<field name="societe" type="text" size="50" default="" label="PLG_AKPAYMENT_CMCIC_SOCIETE_LABEL" description="PLG_AKPAYMENT_CMCIC_SOCIETE_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_CMCIC_SANDBOX_LABEL" description="PLG_AKPAYMENT_CMCIC_SANDBOX_DESC">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
