<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - CashU</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-07-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_CASHU_DESCRIPTION</description>
	<files>
		<filename plugin="cashu">cashu.php</filename>
		<folder>cashu</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_cashu.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_cashu.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_CASHU_TITLE_LABEL" description="PLG_AKPAYMENT_CASHU_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_CASHU_PPIMAGE_LABEL" description="PLG_AKPAYMENT_CASHU_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_CASHU_MERCHANTID_LABEL" description="PLG_AKPAYMENT_CASHU_MERCHANTID_DESC"/>
				<field name="merchant_keyword" type="text" size="50" default="" label="PLG_AKPAYMENT_CASHU_MERCHANTKEYWORD_LABEL" description="PLG_AKPAYMENT_CASHU_MERCHANTKEYWORD_DESC"/>
				<field name="service_name" type="text" size="50" default="" label="PLG_AKPAYMENT_CASHU_MERCHANTSERVICE_LABEL" description="PLG_AKPAYMENT_CASHU_MERCHANTSERVICE_DESC"/>
				<field type="spacer" />
				<field name="language" type="radio" default="en" label="PLG_AKPAYMENT_CASHU_LANG_LABEL" description="PLG_AKPAYMENT_CASHU_LANG_DESC">
					<option value="en">PLG_AKPAYMENT_CASHU_LANG_EN</option>
					<option value="ar">PLG_AKPAYMENT_CASHU_LANG_AR</option>
					<option value="ir">PLG_AKPAYMENT_CASHU_LANG_IR</option>
				</field>
				<field name="enhanced_encryption" type="radio" default="0" label="PLG_AKPAYMENT_CASHU_ENHANCED_ENCRYPTION_LABEL" description="PLG_AKPAYMENT_CASHU_ENHANCED_ENCRYPTION_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_CASHU_SANDBOX_LABEL" description="PLG_AKPAYMENT_CASHU_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>