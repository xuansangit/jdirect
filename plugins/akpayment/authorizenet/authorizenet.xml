<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Authorize.Net</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-05-27</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_AUTHORIZENET_DESCRIPTION</description>
	<files>
		<filename plugin="authorizenet">authorizenet.php</filename>
		<folder>authorizenet</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_authorizenet.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_authorizenet.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_AUTHORIZENET_TITLE_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_AUTHORIZENET_PPIMAGE_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="api_id" type="text" size="50" default="" label="PLG_AKPAYMENT_AUTHORIZENET_APIID_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_APIID_DESC"/>
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_AUTHORIZENET_KEY_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_KEY_DESC"/>
				<field name="hash" type="text" size="50" default="" label="PLG_AKPAYMENT_AUTHORIZENET_HASH_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_HASH_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_AUTHORIZENET_SANDBOX_LABEL" description="PLG_AKPAYMENT_AUTHORIZENET_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>