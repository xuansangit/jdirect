<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - PayFast</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-06-02</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_PAYFAST_DESCRIPTION</description>
	<files>
		<filename plugin="payfast">payfast.php</filename>
		<folder>payfast</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_payfast.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_payfast.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYFAST_TITLE_LABEL" description="PLG_AKPAYMENT_PAYFAST_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYFAST_PPIMAGE_LABEL" description="PLG_AKPAYMENT_PAYFAST_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYFAST_MERCHANTID_LABEL" description="PLG_AKPAYMENT_PAYFAST_MERCHANTID_DESC"/>
				<field name="merchant_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYFAST_MERCHANTKEY_LABEL" description="PLG_AKPAYMENT_PAYFAST_MERCHANTKEY_DESC"/>	
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_PAYFAST_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYFAST_SANDBOX_DESC">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
