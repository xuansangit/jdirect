<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - eWay Shared</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-08-24</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_EWAY_DESCRIPTION</description>
	<files>
		<filename plugin="eway">eway.php</filename>
		<folder>eway</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_eway.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_eway.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_TITLE_LABEL" description="PLG_AKPAYMENT_EWAY_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_PPIMAGE_LABEL" description="PLG_AKPAYMENT_EWAY_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="site" type="radio" default="0" label="PLG_AKPAYMENT_EWAY_SITE_LABEL" description="PLG_AKPAYMENT_EWAY_SITE_DESC">
					<option value="0">PLG_AKPAYMENT_EWAY_SITE_AUSTRALIA</option>
					<option value="1">PLG_AKPAYMENT_EWAY_SITE_UK</option>
					<option value="2">PLG_AKPAYMENT_EWAY_SITE_NZ</option>
				</field>
				<field type="spacer" />
				<field name="customerid" type="text" size="50" default="87654321" label="PLG_AKPAYMENT_EWAY_CUSTOMERID_LABEL" description="PLG_AKPAYMENT_EWAY_CUSTOMERID_DESC"/>
				<field name="username" type="text" size="50" default="TestAccount" label="PLG_AKPAYMENT_EWAY_USERNAME_LABEL" description="PLG_AKPAYMENT_EWAY_USERNAME_DESC"/>
				<field name="companylogo" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_COMPANYLOGO_LABEL" description="PLG_AKPAYMENT_EWAY_COMPANYLOGO_DESC"/>
				<field name="pagebanner" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_PAGEBANNER_LABEL" description="PLG_AKPAYMENT_EWAY_PAGEBANNER_DESC"/>
				<field name="language" type="radio" default="EN" label="PLG_AKPAYMENT_EWAY_LANGUAGE_LABEL" description="PLG_AKPAYMENT_EWAY_LANGUAGE_DESC">
					<option value="EN">PLG_AKPAYMENT_EWAY_LANGUAGE_EN</option>
					<option value="ES">PLG_AKPAYMENT_EWAY_LANGUAGE_ES</option>
					<option value="FR">PLG_AKPAYMENT_EWAY_LANGUAGE_FR</option>
					<option value="DE">PLG_AKPAYMENT_EWAY_LANGUAGE_DE</option>
					<option value="NL">PLG_AKPAYMENT_EWAY_LANGUAGE_NL</option>
				</field>
				<field name="companyname" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_COMPANYNAME_LABEL" description="PLG_AKPAYMENT_EWAY_COMPANYNAME_DESC"/>
				<field name="pagetitle" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_PAGETITLE_LABEL" description="PLG_AKPAYMENT_EWAY_PAGETITLE_DESC"/>
				<field name="pagedescription" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_PAGEDESCRIPTION_LABEL" description="PLG_AKPAYMENT_EWAY_PAGEDESCRIPTION_DESC"/>
				<field name="pagefooter" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAY_PAGEFOOTER_LABEL" description="PLG_AKPAYMENT_EWAY_PAGEFOOTER_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>