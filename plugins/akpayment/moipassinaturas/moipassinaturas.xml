<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - MoIP Assinaturas</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-06-09</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_MOIPASSINATURAS_DESCRIPTION</description>
	<files>
		<filename plugin="moipassinaturas">moipassinaturas.php</filename>
		<folder>moipassinaturas</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_moipassinaturas.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_moipassinaturas.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_MOIPASSINATURAS_TITLE_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_MOIPASSINATURAS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="token" type="text" size="50" default="" label="PLG_AKPAYMENT_MOIPASSINATURAS_APITOKEN_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_APITOKEN_DESC"/>
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_MOIPASSINATURAS_APIKEY_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_APIKEY_DESC"/>
				<field name="notification_token" type="text" size="50" default="" label="PLG_AKPAYMENT_MOIPASSINATURAS_NOTIFICATIONTOKEN_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_NOTIFICATIONTOKEN_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_MOIPASSINATURAS_SANDBOX_LABEL" description="PLG_AKPAYMENT_MOIPASSINATURAS_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
