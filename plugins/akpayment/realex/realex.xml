<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Realex Payments</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-02-17</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_REALEX_DESCRIPTION</description>
	<files>
		<filename plugin="realex">realex.php</filename>
		<folder>realex</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_realex.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_realex.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_REALEX_TITLE_LABEL" description="PLG_AKPAYMENT_REALEX_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_REALEX_PPIMAGE_LABEL" description="PLG_AKPAYMENT_REALEX_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_REALEX_MERCHANTID_LABEL" description="PLG_AKPAYMENT_REALEX_MERCHANTID_DESC"/>
				<field name="shared_secret" type="text" size="50" default="" label="PLG_AKPAYMENT_REALEX_SHAREDSECRET_LABEL" description="PLG_AKPAYMENT_REALEX_SHAREDSECRET_DESC"/>
				<field name="account" type="text" size="50" default="" label="PLG_AKPAYMENT_REALEX_ACCOUNT_LABEL" description="PLG_AKPAYMENT_REALEX_ACCOUNT_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>