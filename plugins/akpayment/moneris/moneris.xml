<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Moneris</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-03-04</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_MONERIS_DESCRIPTION</description>
	<files>
		<filename plugin="moneris">moneris.php</filename>
		<folder>moneris</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_moneris.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_moneris.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_MONERIS_TITLE_LABEL" description="PLG_AKPAYMENT_MONERIS_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_MONERIS_PPIMAGE_LABEL" description="PLG_AKPAYMENT_MONERIS_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="storeid" type="text" size="50" default="" label="PLG_AKPAYMENT_MONERIS_STOREID_LABEL" description="PLG_AKPAYMENT_MONERIS_STOREID_DESC"/>
				<field name="apikey" type="text" size="50" default="" label="PLG_AKPAYMENT_MONERIS_APIKEY_LABEL" description="PLG_AKPAYMENT_MONERIS_APIKEY_DESC"/>
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_MONERIS_SANDBOX_LABEL" description="PLG_AKPAYMENT_MONERIS_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>