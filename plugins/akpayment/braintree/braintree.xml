<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Braintree</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-12-10</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_BRAINTREE_DESCRIPTION</description>
	<files>
		<filename plugin="braintree">braintree.php</filename>
		<folder>braintree</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_braintree.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_braintree.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_BRAINTREE_TITLE_LABEL" description="PLG_AKPAYMENT_BRAINTREE_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_BRAINTREE_PPIMAGE_LABEL" description="PLG_AKPAYMENT_BRAINTREE_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_BRAINTREE_MERCHANTID_LABEL" description="PLG_AKPAYMENT_BRAINTREE_MERCHANTID_DESC"/>
				<field name="pub_key" type="text" size="50" default="" label="PLG_AKPAYMENT_BRAINTREE_PUBKEY_LABEL" description="PLG_AKPAYMENT_BRAINTREE_PUBKEY_DESC"/>
				<field name="priv_key" type="text" size="50" default="" label="PLG_AKPAYMENT_BRAINTREE_PRIVKEY_LABEL" description="PLG_AKPAYMENT_BRAINTREE_PRIVKEY_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_BRAINTREE_SANDBOX_LABEL" description="PLG_AKPAYMENT_BRAINTREE_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
