	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-05-04</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_ZARINPAL_DESCRIPTION</description>
	<files>
		<filename plugin="zarinpal">zarinpal.php</filename>
		<folder>zarinpal</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_zarinpal.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_zarinpal.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_ZARINPAL_TITLE_LABEL" description="PLG_AKPAYMENT_ZARINPAL_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_ZARINPAL_PPIMAGE_LABEL" description="PLG_AKPAYMENT_ZARINPAL_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_ZARINPAL_MERCHANTID_LABEL" description="PLG_AKPAYMENT_ZARINPAL_MERCHANTID_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>