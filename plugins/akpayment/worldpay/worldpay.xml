<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - WorldPay</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2011-05-13</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_WORLDPAY_DESCRIPTION</description>
	<files>
		<filename plugin="worldpay">worldpay.php</filename>
		<folder>worldpay</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_worldpay.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_worldpay.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_WORLDPAY_TITLE_LABEL" description="PLG_AKPAYMENT_WORLDPAY_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_WORLDPAY_PPIMAGE_LABEL" description="PLG_AKPAYMENT_WORLDPAY_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="instid" type="text" size="50" default="" label="PLG_AKPAYMENT_WORLDPAY_INSTID_LABEL" description="PLG_AKPAYMENT_WORLDPAY_INSTID_DESC"/>
				<field name="callbackpw" type="text" size="50" default="" label="PLG_AKPAYMENT_WORLDPAY_CALLBACKPW_LABEL" description="PLG_AKPAYMENT_WORLDPAY_CALLBACKPW_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_WORLDPAY_SANDBOX_LABEL" description="PLG_AKPAYMENT_WORLDPAY_SANDBOX_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>