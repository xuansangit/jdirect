<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - eWay Rapid 3</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2013-02-24</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_EWAYRAPID3_DESCRIPTION</description>
	<files>
		<filename plugin="ewayrapid3">ewayrapid3.php</filename>
		<folder>ewayrapid3</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_ewayrapid3.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_ewayrapid3.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_TITLE_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_PPIMAGE_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="key" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_KEY_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_KEY_DESC"/>
				<field name="password" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_PASSWORD_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_PASSWORD_DESC"/>
				<field type="spacer" />
				<field name="sb_key" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_SB_KEY_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_SB_KEY_DESC"/>
				<field name="sb_password" type="text" size="50" default="" label="PLG_AKPAYMENT_EWAYRAPID3_SB_PASSWORD_LABEL" description="PLG_AKPAYMENT_EWAYRAPID3_SB_PASSWORD_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_CLICKANDBUY_SANDBOX_LABEL" description="PLG_AKPAYMENT_CLICKANDBUY_SANDBOX_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>