<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="akpayment" method="upgrade">
	<name>Akeeba Subscriptions Payment - Beanstream</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2013 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2012-09-06</creationDate>
	<version>1.0</version>
	<description>PLG_AKPAYMENT_BEANSTREAM_DESCRIPTION</description>
	<files>
		<filename plugin="beanstream">beanstream.php</filename>
		<folder>beanstream</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_beanstream.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_beanstream.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_TITLE_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_PPIMAGE_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="merchant_id" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_MERCHANTID_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_MERCHANTID_DESC"/>
				<field name="hash_key" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_HASHKEY_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_HASHKEY_DESC"/>
				<field type="spacer" />
				<field name="success_url" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_SUCCESSURL_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_SUCCESSURL_DESC"/>
				<field name="decline_url" type="text" size="50" default="" label="PLG_AKPAYMENT_BEANSTREAM_DECLINEURL_LABEL" description="PLG_AKPAYMENT_BEANSTREAM_DECLINEURL_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>