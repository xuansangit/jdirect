<extension type="component" version="1.6.0" method="upgrade">
    <name>Watchfulli</name>
    <version>1.5.6</version>
    <creationDate>2013-05-24</creationDate>
    <description>Watchfulli - Remote updates and security monitoring Joomla!</description>
    <license>GPL</license>
    <author>watchful.li</author>
    <authoremail>info@watchful.li</authoremail>
    <authorUrl>http://www.watchful.li</authorUrl>
    
    <files folder="site">
      <filename>actions.php</filename>
      <filename>index.html</filename>
      <filename>controller.php</filename>
      <filename>send.php</filename>
      <filename>watchfulli.php</filename>
      <folder>views</folder>
    </files>   
    
    <administration>
        
        <menu img="../administrator/components/com_watchfulli/watchfulli_picto_16x16.png" link="option=com_watchfulli">Watchfulli</menu>
        
        <files folder="admin">
            <filename>index.html</filename>
            <filename>watchfulli.php</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>watchfulli_picto_16x16.png</filename>
            <filename>watchfulli_picto_48x48.png</filename>
            <filename>icon_jmon.css</filename>
            <folder>classes</folder>
            <folder>views</folder>
            <folder>jmonitoringpluginmonitoring</folder>
        </files>
          
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_watchfulli.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.com_watchfulli.ini</language>
        </languages>
        
    </administration> 
    
    <!-- Installation PHP scripts -->
	<scriptfile>install.watchfulli.php</scriptfile>

  <updateservers>
    <server type="extension" priority="1" name="Watchfully Slave Update">https://www.watchful.li/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=1</server>
  </updateservers>

  <compatibility>
    <version>2.5</version>
    <version>3</version>
  </compatibility>
</extension>
